<%= simple_form_for @role, :html => { :class => 'form-horizontal' } do |f| %>
	<div class="row">
    <div class="col-md-6">
      <div class="form-group">
  			<%= f.input :name, :input_html => { class: 'form-control'}, :required=> true %>
  			<%= f.error_span(:name) %>
      </div>
    </div>
  </div>
  <% unless @role.new_record? %>
  	<div class="row">
	    <div class="col-md-6">
	      <div class="form-group">
				  <%= f.input :active %>
				  <%= f.error_span(:active) %>
				</div>
    </div>
  </div>
	<% end %>
	<div class="row">
    <div class="col-md-6">
      <div class="form-group">
			  <%= f.button :submit, :class => 'btn btn-primary' %>
			  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
		                roles_path, :class => 'btn btn-default' %>
      </div>
    </div>
  </div>
<% end %>
